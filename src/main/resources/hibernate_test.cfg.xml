<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!--        <property name="connection.url">jdbc:mysql://localhost:3306/school_db_test?allowPublicKeyRetrieval=true&amp;useSSL=false</property>-->
        <property name="connection.url">jdbc:mysql://localhost:3306/school_db_test?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;createDatabaseIfNotExist=true</property>
        <property name="connection.username">testuser</property>
        <property name="connection.password"></property>
        <property name="hbm2ddl.auto">update</property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="show_sql">false</property>
        <property name="current_session_context_class">thread</property>
        <mapping class="org.aes.compare.orm.model.Address"/>
        <mapping class="org.aes.compare.orm.model.courses.abstracts.Course"/>
        <mapping class="org.aes.compare.orm.model.ExamResult"/>
        <mapping class="org.aes.compare.orm.model.Student"/>
        <mapping class="org.aes.compare.orm.model.courses.concretes.LiteratureCourse"/>
        <mapping class="org.aes.compare.orm.model.courses.concretes.MathCourse"/>
        <mapping class="org.aes.compare.orm.model.courses.concretes.OtherCourse"/>
        <mapping class="org.aes.compare.orm.model.courses.concretes.ScienceCourse"/>
        <mapping class="org.aes.compare.orm.model.courses.concretes.programming.FlutterCourse"/>
        <mapping class="org.aes.compare.orm.model.courses.concretes.programming.JavaCourse"/>
        <mapping class="org.aes.compare.orm.model.courses.concretes.programming.ReactCourse"/>
    </session-factory>
</hibernate-configuration>
